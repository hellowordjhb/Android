<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res/com.example.demo01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />
				
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />
                
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >
                
                <com.example.util.HomeButton
                    android:id="@+id/bustraveal"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    ptr:backcolor="0"
                    ptr:big="false"
                    ptr:home="0"
                    ptr:text="大巴旅游"
                    ptr:textSize="24sp" />

                <com.example.util.HomeButton
                    android:id="@+id/guide"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="1"
                    ptr:big="false"
                    ptr:home="1"
                    ptr:text="导游翻译"
                    ptr:textSize="24sp" />

                <com.example.util.HomeButton
                    android:id="@+id/specialline"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="2"
                    ptr:big="false"
                    ptr:home="2"
                    ptr:text="旅欧专线"
                    ptr:textSize="24sp" />
                
                <com.example.util.HomeButton
                    android:id="@+id/hotelreservation"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="3"
                    ptr:big="false"
                    ptr:home="3"
                    ptr:text="景点查询"
                    ptr:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" >

                <com.example.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="4"
                    ptr:big="false"
                    ptr:home="4"
                    ptr:text="旅欧保险"
                    ptr:textSize="24sp" />

                <com.example.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="5"
                    ptr:big="false"
                    ptr:home="5"
                    ptr:text="旅欧租车"
                    ptr:textSize="24sp" />

                <com.example.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    ptr:backcolor="6"
                    android:layout_marginTop="8dp"
                    ptr:big="false"
                    ptr:home="6"
                    ptr:text="旅欧签证"
                    ptr:textSize="24sp" />
                
                <com.example.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    ptr:backcolor="7"
                    android:layout_marginTop="8dp"
                    ptr:big="false"
                    ptr:home="7"
                    ptr:text="更多功能"
                    ptr:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>